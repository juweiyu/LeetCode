class Solution:
    def maxSubArray(self, nums: List[int]) -> int:
        if not nums:
            return 0
        
        if max(nums) <=0:
            return max(nums)
        
        global_sum = local_sum = 0
        
        for i in range(len(nums)):
            local_sum = max(local_sum + nums[i], 0)
            global_sum = max(local_sum, global_sum)
        
        return global_sum
