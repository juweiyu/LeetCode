class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        if not prices:
            return 0
        
        local_delta = global_delta = 0
        
        for i in range(1, len(prices)):
            local_delta = max(local_delta + prices[i] - prices[i-1], 0)
            global_delta = max(global_delta, local_delta)
        
        return global_delta
        
