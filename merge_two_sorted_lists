# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeTwoLists(self, l1: ListNode, l2: ListNode) -> ListNode:
        now = ListNode()
        start = now
        
        while l1 or l2:
            if l1 and l2:
                if l1.val <= l2.val:
                    now.next = l1
                    l1 = l1.next
                else:
                    now.next = l2
                    l2 = l2.next
            elif l1:
                now.next = l1
                break
            else:
                now.next = l2
                break
            now = now.next
        return start.next
