# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def maxDepth(self, root: TreeNode) -> int:
        if root == None:
            return 0
        else:
            layer = []
            layer.append(root)
            depth = 0
            while len(layer) > 0:
                depth = depth + 1
                next_layer = []
                for node in layer:
                    if node:
                        if node.left:
                            next_layer.append(node.left)
                        if node.right:
                            next_layer.append(node.right)
                layer = next_layer
            return depth
        
